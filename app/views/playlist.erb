<ul>
  <% Playlist.sort.each_with_index do |song, i| %>
    <% if i < 15 %>
      <li> <%= song.upvote_count %> - <a href="/songs/<%= song.slug %>/upvote">  â–ˆ  </a>   <%= song.spotify_id %>  </li>
    <% end %>
  <% end %>
